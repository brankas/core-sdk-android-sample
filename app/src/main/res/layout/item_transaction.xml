<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import
            alias="ExtensionFunctions"
            type="com.brankas.testapp.extension.CalendarExtensionKt" />

        <variable
            name="item"
            type="com.brankas.testapp.model.TransactionItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_24"
        android:paddingEnd="@dimen/dp_24">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/transactionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@{ExtensionFunctions.getDateString(item.transaction.date)}"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                style="@style/NormalTextStyle"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/transactionAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@{item.getAccountName()}"
                android:textSize="12sp"
                style="@style/NormalTextStyle"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/transactionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@{item.getFormattedAmount()}"
                android:textStyle="bold"
                style="@style/NormalTextStyle"/>
        </LinearLayout>

        <View
            android:id="@+id/separator"
            setVisible="@{!item.isLast}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@color/separator_line_color" />

    </LinearLayout>

</layout>