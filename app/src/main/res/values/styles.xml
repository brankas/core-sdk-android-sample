<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="NormalTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="HeadingTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

</resources>